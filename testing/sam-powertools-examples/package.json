{
  "name": "sam-powertools-examples",
  "version": "1.0.0",
  "scripts": {
    "unit": "jest",
    "lint": "eslint --cache . --ext .js,.ts,.tsx",
    "compile": "npm run compile --workspaces",
    "test": "npm run compile && npm run unit"
  },
  "dependencies": {
    "esbuild": "^0.18.16"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "3.388.0",
    "@types/aws-lambda": "^8.10.92",
    "@types/jest": "^29.2.0",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-gitlab": "^4.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    ".aws-sam"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "projects": [
      {
        "displayName": "nodejs18_powertools_layer",
        "testMatch": [
          "**/tests/unit/*.test.ts"
        ],
        "transform": {
          "^.+\\.ts?$": "ts-jest"
        }
      },
      {
        "displayName": "nodejs18_powertools_npm",
        "testMatch": [
          "**/tests/unit/*.test.ts"
        ],
        "transform": {
          "^.+\\.ts?$": "ts-jest"
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "workspaces": [
    "functions/nodejs/18/base",
    "functions/nodejs/18/powertools/npm",
    "functions/nodejs/18/powertools/layer",
    "functions/nodejs/18/powertools/remote",
    "functions/nodejs/18/powertools/secret",
    "functions/nodejs/18/powertools/complete"
  ]
}
